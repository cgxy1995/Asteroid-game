			 //bullets with alien ships
			 for(int j=0;j<aliennum;j++){
				 if(aliens[j]!=null && bullets[i]!=null &&aliens[j].boundbox.contains(bullets[i].x, bullets[i].y) && (bullets[i].owner==0||bullets[i].owner==2)){
					 if(aliens[j].getHit())
						 aliens[j]=null;
					 if(bullets[i].owner==0)
					 	calcScore(1);
